html {
    font-size:90%;
}

body {
  min-height: 100vh;
  font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans",sans-serif;
}


/* Navbar */
.mikio .mikio-navbar {
  z-index: 1020;
  background-color: #fff;
}

.mikio .mikio-navbar.navbar-dark .navbar-nav .mikio-navbar-seperate svg {
    fill: rgba(255,255,255,.5);
}

.mikio .mikio-navbar.navbar-dark .navbar-nav .mikio-navbar-seperate:hover svg {
    fill: rgba(255,255,255,.75);
}

.mikio .mikio-navbar .mikio-navbar-title .mikio-navbar-title-image {
    width: 30px;
    height: 30px;
    margin-right: 1rem;
}

/* Lower Navbar */
.mikio .mikio-lower-navbar {
    background-color: #f8f9fa;
    border-bottom: 1px solid #ddd;
}


/* Hero */
.mikio .mikio-hero {
    background-color: #3db7ca;
}

.mikio .mikio-hero .mikio-hero-text {
    margin: 2rem 4rem;
}


/* Main */
.mikio main {
  flex-grow: 1;
  padding: 1rem 3rem;
  background-color: #fff;
}

.mikio main h1 {
  margin-top: 1rem;
}

.mikio main h2 {
  margin-top: 3rem;
  margin-bottom: 1rem;
  border-bottom: 1px solid #ddd;
}

.mikio main h3 {
  margin-top: 2.5rem;
  margin-bottom: 1rem;
  border-bottom: 1px solid #ddd;
}

.mikio main h4 {
  margin-top: 2rem;
  margin-bottom: 1rem;
  border-bottom: 1px solid #ddd;
}

.mikio main h5 {
  margin-top: 1rem;
}


/* Sidebar */
.mikio aside {
  padding: 0 1.5rem;
  border-right: 1px solid #ddd;
  font-size:0.9rem;
  flex:0 0 20rem;
}

.mikio aside ul {
  list-style: none;
  padding-left: 0;
}

.mikio aside ul ul {
    padding: 1rem 0 0 1rem;
}

.mikio aside li {
  margin-bottom: 1rem;
}

.mikio aside li .li {
    display: inline-block;
}

.mikio aside li.closed:before {
    display: inline-block;
    text-align: center;
    width: 1.5rem;
    font-family: 'FontAwesome';
    content: "\f0da";
    color: #999;
}

.mikio aside li.open:before {
    display: inline-block;
    text-align: center;
    width: 1.5rem;
    font-family: 'FontAwesome';
    content: "\f0d7";
    color: #999;
}

.mikio aside li.level1:before, .mikio aside li.level2:before, .mikio aside li.level3:before {
    display: inline-block;
    text-align: center;
    width: 1.5rem;
    font-family: 'FontAwesome';
    content: "\f016";
    color: #999;
}

.mikio aside li a, .mikio aside li a.indexmenu_idx_head {
    font-weight: normal;
    color: #222;
}

.mikio aside .mikio-sidebar-content {
    margin: 2rem 0;
}

/* .mikio div.li a.indexmenu_idx, .mikio div.li a.indexmenu_idx_head {
  font-weight: 500;
}

.mikio div.li a.indexmenu_idx_head {
  color: #222;
}

.mikio div.li a.indexmenu_idx_head:hover {
  color: #000;
  text-decoration: none;
} */

.mikio aside .search {
    margin: 2rem 0;
}


/* Right sidebar */
.mikio aside.mikio-right-sidebar {
    display: block;
    border-left: 1px solid #ddd;
    border-right: 0;
}


/* TOC */
.mikio .mikio-toc {
  padding-left: 3rem;
  background-color: #fff;
}

.mikio .mikio-toc-full {
  flex: 0 0 20rem;
}

.mikio .mikio-toc-float {
  width: 15rem;
  float: right;
}

.mikio .mikio-toc #dw__toc {
  background-color: #fff;
  border-left:4px solid #eee;
  padding: 0.5rem 0 0.5rem 1rem;
  margin-top: 2rem;
}

.mikio .mikio-toc #dw__toc h3 {
  font-size: 0.9rem;
  border: 0;
  margin: 0 0 1rem 0;
}

.mikio .mikio-toc #dw__toc ul {
  list-style: none;
  font-size: 0.8rem;
}

.mikio .mikio-toc #dw__toc ul, .mikio .mikio-toc #dw__toc .li {
  padding: 0 0 0.5rem 0.5rem;
}


/* Footer */
.mikio .mikio-footer {
    background-color: #343a40;
    padding: 1rem;
    color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.mikio .mikio-footer a {
    color: rgba(255, 255, 255, 0.5);
}

.mikio .mikio-footer a:hover {
    color: rgba(255, 255, 255, 0.75);
}

.mikio .mikio-footer .doc, .mikio .mikio-footer .mikio-footer-search, .mikio .mikio-footer .navbar-nav, .mikio .mikio-footer .dw__pagetools, .mikio .mikio-footer .license {
    margin-bottom: 0.5rem;
}

.mikio .mikio-footer .dw__pagetools svg {
    fill: rgba(255,255,255,.5);
}

.mikio .mikio-footer .dw__pagetools .btn:hover svg {
    fill: rgba(255,255,255,.75);
}






/* Breadcrumb */
.mikio .mikio-breadcrumbs {
    margin-bottom: 0.75rem;
}

.mikio .mikio-breadcrumbs ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.mikio .mikio-breadcrumbs ul li {
    display: inline-block;
}

.mikio .mikio-breadcrumbs ul li.sep {
    padding: 0 0.5rem;
}



