 /* Search Results */
.search_fullpage_result {
    margin-bottom: 0.5rem;
    padding: 1rem;
}

.search_fullpage_result:nth-child(even) {
    background-color: #eee;
}

.toggleAssistant {
    
}


/* Page Tools */
 .mikio #dw__pagetools {
    position: fixed;
    right: 0;
    top: 40%;
    z-index: 9999;
    text-align: center;
    border-style: solid;
    border-color: #ddd;
    border-width: 1px 0 1px 1px;
    padding-bottom: 1px;
    border-radius: 6px 0 0 6px;
    box-shadow: 0 0 10px #999;
    transition: right .5s;
    transition-delay: 2s;
}

.mikio #dw__pagetools:hover {
    right: 0px;
    transition: right .250s;
}


/* Config Manager */
.mikio #config__manager fieldset {
    background-color: transparent;
    margin: 2rem 0;
    padding: 0;
    border: 0;
    text-align: left;
}

.mikio #config__manager fieldset legend {
    font-weight: 500;
    padding: 1rem;
    border-width: 1px 1px 0 1px;
    border-style: solid;
    border-color: #999;
    margin: 0;
    background-color: #999;
    color: #fff;
}

.mikio #config__manager table {
    border: 1px solid #ddd;
    margin-top: 0;
}

.mikio #config__manager table th, .mikio #config__manager table td {
    border: 0;
}

.mikio #config__manager tr td {
    padding: 1rem;
    vertical-align: middle;
}

.mikio #config__manager td.label span.outkey {
    margin: 0;
    font-size: 100%;
    background-color: transparent;
    color: #000;
}

.mikio #config__manager td.label label {
    color: #666;
    font-size: 90%;
    padding-top: 0.5rem;
    margin-bottom: 0;
}

.mikio #config__manager td.value .selection label {
    /* margin-top: 0.5rem; */
}

.mikio #config__manager fieldset input.edit, .mikio #config__manager fieldset select {
    width: 100%;
}

.mikio #config__manager tr.default .input, .mikio #config__manager tr.default input, .mikio #config__manager tr.default textarea, .mikio #config__manager tr.default select, .mikio #config__manager .selectiondefault {
    background-color: transparent;
}

.mikio #config__manager tr.default input.edit {
    background-color: #fff;
}

.mikio #config__manager .mikio-config-table-header {
    font-weight: 500;
    background-color: #62b1bd;
    color: #fff;
}


/* Login */
.mikio.mikio-act-login, .mikio.mikio-act-denied main {
    background-color: #ddd;
    /* DONE Added main selector */
}

.mikio.mikio-act-login, .mikio.mikio-act-denied main form {
    display: block;
}


.mikio.mikio-act-login h1#login, .mikio.mikio-act-login div p, .mikio.mikio-act-login #dw__login, .mikio.mikio-act-denied h1#login, .mikio.mikio-act-denied h1#permission_denied, .mikio.mikio-act-denied div p, .mikio.mikio-act-denied #dw__login {
    width: 40rem;
    margin: 0 auto;
    background-color: #fff;
    box-shadow: 0 8px 10px #999;
}

.mikio.mikio-act-login h1#login, .mikio.mikio-act-denied h1#login {
    margin-top: 4rem;
    padding: 1rem 2rem;
    border-width: 1px 1px 0 1px;
    border-style: solid;
    border-color: #999;
    border-radius: 6px 6px 0 0;
}

.mikio.mikio-act-login div p, .mikio.mikio-act-denied div p {
    padding: 0 2rem;
    border-width: 0 1px 0 1px;
    border-style: solid;
    border-color: #999;
}

.mikio.mikio-act-login #dw__login, .mikio.mikio-act-denied #dw__login {
    padding: 1rem 2rem;
    border-width: 0 1px 1px 1px;
    border-style: solid;
    border-color: #999;
    border-radius: 0 0 6px 6px;
}

.mikio.mikio-act-login #dw__login label, .mikio.mikio-act-denied #dw__login label {
    display: block;
    text-align: left;
}

.mikio.mikio-act-login #dw__login label span {
    
}

.mikio.mikio-act-login #dw__login legend, .mikio.mikio-act-denied #dw__login legend {
    display: none;
}

.mikio.mikio-act-login #dw__login label input[type=text], .mikio.mikio-act-login #dw__login label input[type=password], .mikio.mikio-act-denied #dw__login label input[type=text], .mikio.mikio-act-denied #dw__login label input[type=password] {
    width: 100%;
}

.mikio.mikio-act-login #dw__login button, .mikio.mikio-act-denied #dw__login button {
    margin: 1rem 0;
}

.mikio.mikio-act-denied main h1#permission_denied, .mikio.mikio-act-denied main div:nth-of-type(2) p {
    color: #721c24;
    background-color: #f8d7da;
    box-shadow: none;
}

.mikio.mikio-act-denied main h1#permission_denied {
    border-width: 1px 1px 0 1px;
    border-style: solid;
    border-color: #f5c6cb;
    border-radius: .25rem .25rem 0 0;
    padding: .5rem 1.25rem;
    font-size: 1.2rem;
    margin-top: 2rem;
}

.mikio.mikio-act-denied main div:nth-of-type(2) p {
    border-width: 0 1px 1px 1px;
    border-style: solid;
    border-color: #f5c6cb;
    border-radius: 0 0 .25rem .25rem;
    padding: .3rem 1.25rem;
}


/* Alerts */
.mikio .alert {
    overflow: hidden;
}


/* Buttons */
.mikio a.btn {
    text-decoration: none;
}

/* Dropdown Menu */
.mikio .dropdown-menu {
    box-shadow: 0 8px 10px #999;
}

/* Font Awesome */
.navbar .fa, .navbar svg {
    margin: 0 0.5rem;
}

/* Form Control */
.mikio .form-control {
    display: inline-block;
    width: auto;
    height: auto;
}

/* Label */
.mikio label {
    margin-bottom: 0;
}

/* Media */
.mikio .media {
    display: inline;
}

.mikio .medialeft {
    margin-right: 1rem;
}

.mikio-svg-file {
    width: 5rem;
    height: 5rem;
}

/* Media Manager */
#media__manager {
    display: flex;
    height: 100%;
}

#media__manager #mediamgr__aside {
    background-color: #f8f8f8;
    padding: 0 1rem;
    overflow: auto;
    min-width: 260px;
    width: 260px;
    min-height: 100vh;
    position: relative;
}

#media__manager #mediamgr__aside #media__tree {
    background-color: #fff;
    border: 1px solid #ddd;
    padding: 1rem;
    overflow: hidden;
    overflow-x: auto;
}

#media__tree .idx_dir {
    padding: 4px 6px;
}

#media__tree .idx_dir.active {
    background-color: rgb(106, 211, 252);
}

#media__manager #mediamgr__aside h1 {
    margin-top: 1rem;
}

#media__manager #mediamgr__aside #media__tree ul {
    padding: 0;
    margin: 4px 0;
    white-space: nowrap;
}

#media__manager #mediamgr__aside #media__tree ul ul {
    padding-left: 1rem;
    /* margin-bottom: 4px 0; */
}

#media__manager #mediamgr__aside #media__tree li a {
    width: 100%;
}

#media__manager #mediamgr__aside #media__tree ul li {
    display: block;
    margin-bottom: 4px;
}

#media__manager #mediamgr__aside #media__tree ul li .li {
    display: inline-block;
    margin-left: 0.5rem;
}

#media__manager #mediamgr__aside #media__opts label {
    margin-left: 0.5rem;
}

#media__manager #mediamgr__seperator {
    flex: 0 0 4px;
    width: 4px;
    background-color: #ddd;
}

#media__manager #mediamgr__seperator:hover {
    cursor: col-resize;
}


#media__manager #mediamgr__content {
    flex: 3;
    padding: 1rem;
    background-color: #f8f8f8;
    position: relative;
    min-height: 100vh;
}

#media__manager #mediamgr__content button {
    background-color: transparent;
    cursor: pointer;
    color: #6c757d;
    border:1px solid #6c757d;
    border-radius: .25rem;
    font-size: 1rem;
    line-height: 1.5;
    padding: .375rem .75rem;
    transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
}

#media__manager #mediamgr__content button:hover {
    color: #fff;
    background-color: #6c757d;
}

#media__manager #mediamgr__content .odd, #media__manager #mediamgr__content .even {
    display: none;
}

#media__manager #mediamgr__content div a.select.mediafile {
    padding-left:1.5rem;
}

#media__manager #mediamgr__content div.upload {
    margin: 3rem 0;
}

#media__manager #mediamgr__content #dw__mediasearch {
    border-width: 1px 0 1px 0;
    border-style: solid;
    border-color: #ddd;
    display: block;
:before}

#media__manager #mediamgr__content p.maxsize {  
    margin-top: 0.5rem;
    color: #999;
    font-style: italic;
}

#media__manager form {
    padding: 1rem 0;
}

#media__manager form label {
    display: inline;
}

#media__manager form p {
    margin: 0;
}

#media__manager #mediamgr__content div.nothing {
    max-width: 20rem;
    text-align: center;
    margin: 3rem auto;
}

#media__manager .qq-upload-button, #media__manager button {
    min-width: 8rem;
}

#media__manager .qq-upload-list {
    margin-top: 1rem;
    padding-left: 0;
    list-style: none;
}

#media__manager .qq-upload-list input.qq-upload-name-input {
    height: calc(1.5em + .75rem + 2px);
    padding: .375rem .75rem;
    font-size: 1rem;
    line-height: 1.5;
    color: #495057;
    border: 1px solid #ced4da;
    border-radius: .25rem;
    min-width: 20rem;
    margin: 0 0 1rem 1rem;
}

#media__manager .qq-upload-cancel:before {
    font-family: 'FontAwesome';
    content: "\f1f8"; 
    font-size: 1rem;
    background-color: transparent;
    cursor: pointer;
    color: #6c757d;
    border:1px solid #6c757d;
    border-radius: .25rem;
    line-height: 1.5;
    padding: .5rem .75rem;
    transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
}

#media__manager .qq-upload-cancel:hover:before {
    color: #fff;
    background-color: #6c757d;
}

#media__manager .qq-upload-cancel {
    font-size: 0;
}

#media__manager .qq-upload-failed-text {
    color: #721c24;
    background-color: #f8d7da;
    border: 1px solid #f5c6cb;
    border-radius: .25rem;
    padding: .3rem 1.25rem;
}

#mikio-filelist {
    margin-top: 1rem;
    width: 100%;
    border: 1px solid #ddd;
    border-radius: 6px;
}

#mikio-filelist th, #mikio-filelist td {
    padding: 0.5rem 1rem;
}

#mikio-filelist td:nth-of-type(2) {
    word-break: break-all;
}

#mikio-filelist th:nth-of-type(n+3), #mikio-filelist td:nth-of-type(n+3) {
    text-align: center;
}

#mikio-filelist th {
    background-color: #666;
    color: #fff;
}

#mikio-filelist tbody tr:nth-child(even) td {
    background-color: #fff;
}

.mikio-fileimage {
    width: 120px;
    height: 120px;
    background-position: center;
    background-repeat: no-repeat;
    border-radius: 4px;
}





/* Dokuwiki */
