.mikio .ui-admin ul a:hover {
    text-decoration: none;
    color: #fff;
    background-color: #6c757d;
}

.mikio .ui-admin ul a:hover svg {
    fill: #fff;
}

.mikio #extension__manager .nav-tabs {
    margin: 2rem 0;
}

.mikio .panelHeader p:last-of-type {
    margin-bottom: 0;
}

.mikio table {
    width: 100%;
}

.mikio textarea {
    width: 100%;
}

.mikio button {
    /* margin: 0.5rem;    // TODO affects search bar */
}

.mikio button:first-of-type {
    margin-left: 0;
}

.mikio button:last-of-type {
    margin-right: 0;
}


.mikio .tool__bar, .mikio #discussion__comment_toolbar {
    margin-bottom: 1rem;
}

.mikio .tool__bar .toolbutton, .mikio #discussion__comment_toolbar .toolbutton {
    background-color: #fff;
    border-width: 1px 1px 1px 0;
    border-style: solid;
    border-color: #6c757d;
    padding: .375rem .75rem;
    line-height: 1.5;
    transition: background-color .15s ease-in;
}

.mikio .tool__bar .toolbutton:hover, .mikio #discussion__comment_toolbar .toolbutton:hover {
    background-color: #6c757d;
}

.mikio .tool__bar .toolbutton:first-of-type, .mikio #discussion__comment_toolbar .toolbutton:first-of-type {
    border-left: 1px;
    border-style: solid;
    border-color: #6c757d;
