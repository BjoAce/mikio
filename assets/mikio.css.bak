}

.mikio .tool__bar .toolbutton:last-of-type, .mikio #discussion__comment_toolbar .toolbutton:last-of-type {
    border-radius: 0 .25rem .25rem 0;
}

.mikio #size__ctl {
    float: right;
}

.mikio .editButtons {
    display: inline-block;
    margin: 1rem 0;
}

.mikio .summary {
    display: inline-block;
    margin: 1rem 0;
}

.mikio .summary .nowrap {
    margin-left: 1rem;
}

.mikio .summary .form-control {
    display: inline-block;
    width: auto;
    height: auto;
}


/* Plugin: Tagging */
.mikio .plugin_tagging_edit ul.tagging_cloud {
    margin: 0 0 1rem 0;
}

.mikio .plugin_tagging_edit ul.tagging_cloud.clearfix:after {
    display:none;
    clear:none;
}

.mikio .plugin_tagging_edit ul.tagging_cloud li {
    background-color: #00b5ad;
    margin: 0.2rem;
    padding: 0.3rem;
    border: 1px solid #fff;
    border-radius: 0.3rem;
}

.mikio .plugin_tagging_edit ul.tagging_cloud li a {
    color: #fff;
    font-weight: 700;
}

.mikio .plugin_tagging_edit ul.tagging_cloud li a:before {
    font-family: 'FontAwesome';
    content: "\f02b";
    margin-right: 0.2rem;
}

.mikio .plugin_tagging_edit .btn_tagging_edit {
    display: inline;
}

.mikio .plugin_tagging_edit #tagging__edit_save {
    margin-right: 0.5rem;
}

.mikio .plugin_tagging_edit .btn_tagging_edit {
    margin-bottom: 0.5rem;
}

.mikio .plugin_tagging_edit label.ui-widget {
    background: none;
    border: 0;
    margin-bottom: 0;
}

.mikio .plugin_tagging_edit label.ui-widget span.ui-checkboxradio-icon {
    border: 1px solid #6c757d;
 }


 /* Responsive */
